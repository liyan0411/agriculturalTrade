page {
  background: #eee;
}
.kong{
  text-align: center;
  padding-top: 200rpx;
}
.kong>view{
  padding: 20rpx;
}
.kong>image{
  width:260rpx;
  height:260rpx;
}
.flex-wrp{
  height: 100%;
  flex-direction:column;
}
.flex-item{
  background-image:url('https://s3.cn-north-1.amazonaws.com.cn/anjiplus-shh/4ab1db6fa7e972a7ce95f99838d710151410183699105705194.png');
  /* width: 97%; */
  padding:20rpx;
  height:200rpx;
  margin:0 auto;
  background-repeat: no-repeat;  
  background-size: cover;  
  position: relative;
  color:#fff;
}

.flex-item>image{
  width: 60px; 
  height: 60px;
  position: absolute;
  top:50%;
  margin-top: -60rpx;
  right: 60rpx;
}
.flex-item .ul{
  position: absolute;
  top:50%;
  margin-top: -50rpx;
  left: 62rpx;
}
.flex-item .li{
  display: block;
  font-size: 24px;
}
.flex-item .li>.smallCls{
  padding-left: 30rpx;
  font-size: 14px;
}
.flex-item .li:nth-child(2){
  font-size: 13px;
}
.btnView{
  margin:0 auto;
  width: 100%;
  padding: 46rpx 0;
  background: #eee;
  position: fixed;
  bottom:0;
}
.btnView>button{
  width: 690rpx;
  height: 80rpx;
  border-radius: 10rpx;
  background:#11b37a; 
  line-height: 80rpx;
  font-size: 32rpx;
}
.activeCls{
  background-color:#11b37a; 
}