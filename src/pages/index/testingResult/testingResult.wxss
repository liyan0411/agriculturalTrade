/* pages/index/testingResult/testingResult.wxss */

page {
  background: #eee;
}

.container {
  padding-bottom: 120rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
  background: url(https://s3.cn-north-1.amazonaws.com.cn/anjiplus-shh/08ad13f5047f180f55496398462394cb1410203968989363216.png);
  background-size: cover;
}

.banner view {
  color: #fff;
  text-align: center;
}

.banner view:first-child {
  padding-top: 124rpx;
  font-size: 30px;
}

.banner view:last-child {
  font-size: 12px;
  margin-top: 30rpx;
}

.ul {
  margin-top: 20rpx;
  background: #fff;
}

.ul .title {
  border: 1rpx solid #eee;
  padding: 34rpx 0;
  font-size: 14px;
  color: rgb(51, 51, 51);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ul .title text {
  display: block;
  padding-right: 20rpx;
  color: rgb(17, 179, 122);
  font-size: 13px;
}
.ul .title view {
  position: relative;
  margin: 0 20rpx;
  padding-left: 20rpx;
}

.ul .title view::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 0rpx;
  width: 2px;
  height: 16px;
  background: #11b37a;
}

.ul .li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  margin: 0 30rpx;
  padding: 34rpx 0;
}

.ul .li:last-child {
  border-bottom: none;
}

.ul .li .left {
  color: #666;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 13px;
}
.ul .li .right {
  font-size: 12px;
  color: rgb(153, 153, 153);
} 

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.footer> view {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}

.footer .left {
  background: #11b37a;
}

.footer .right {
  background: #11b37a;
  opacity: 0.5;
}
