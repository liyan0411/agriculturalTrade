/* pages/index/testingResult/testingResult.wxss */

page {
  background: #eee;
}
.container {  
  padding-bottom: 120rpx;
}
.banner {
  width: 100%;
  height: 350rpx;
  background: #b48c48;
}

.ul {
  margin-top: 20rpx;
  background: #fff;
}

.ul .title {
  border: 1rpx solid #eee;
  padding: 34rpx 0;
}

.ul .title view {
  position: relative;
  margin: 0 20rpx;
  padding-left: 20rpx;
}

.ul .title view::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 0rpx;
  width: 2px;
  height: 16px;
  background: #11b37a;
}

.ul .li {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin: 0 30rpx;
  padding: 34rpx 0;
}

.ul .li:last-child {
  border-bottom: none;
}

.ul .li .left {
  color: #666;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100rpx;
}
.footer> view {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;  
  color: #fff;
}
.footer .left {
  background: #11b37a;  
}
.footer .right {
  background: #11b37a;
  opacity: .5;  
}