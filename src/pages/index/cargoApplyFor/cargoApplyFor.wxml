<navigation-bar title="智慧农贸" isShowBack="{{ true }}"></navigation-bar>
<form bindsubmit="loginIn">
  <view class='box'>
    <view class='row'>
      <view class='title'>商品名称:</view>
      <input type='text' name='commodityName' placeholder='请输入商品名称'></input>
    </view>
    <view class='row'>
      <view class='title'>商品数量:</view>
      <input type='number' name='commodityNumber' placeholder='请输入商品数量'></input>
      <view class='kg'>KG</view>
    </view>
    <view class='row address'>
      <view class='title'>产地:</view>
      <view class='right'>
        <!-- <view>省市</view>
        <view>城市</view>
        <view>区县</view> -->
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker">
            {{region[0]}}{{region[1]}}{{region[2]}}
          </view>
        </picker>
      </view>
    </view>
    <view class='row'>
      <input type='text' name='address' placeholder='请输入详细地址'></input>
    </view>
    <view class='row'>
      <view class='title'>来货车牌号:</view>
      <input type='number' name='carNumber' placeholder='请输入来货车牌号'></input>
    </view>
    <view class='row'>
      <view class='title'>到货时间:</view>
      <view class='right'>
        <!-- <view>2018</view>
        <view>8月</view>
        <view>8日</view> -->
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
    </view>
  </view>
  <button form-type='submit' class='submit-btn'>确认</button>
</form>