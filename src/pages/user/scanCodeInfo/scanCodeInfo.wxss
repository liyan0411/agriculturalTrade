page {
  background: #eee;
}

.topBox {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.total {
  font-weight: 600;
  font-size: 32px;
}

.topBox::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: #b48c48;
}

.topBox .box {
  position: absolute;
  background: #fff;
  color: #333;
  width: 690rpx;
  left: 50%;
  margin-left: -345rpx;
  top: 80rpx;
  border-radius: 10rpx;
  padding-bottom: 10rpx;
}

.topBox .box .head {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #ddd;
  margin: 0 auto;
  margin-top: -50rpx;
}

.topBox .bottom {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topBox .bottom .address {
  display: flex;
}

.tabNva {
  background: #fff;
  display: flex;
  justify-content: space-around;
  margin: 0 30rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.tabNva .item {
  box-sizing: border-box;
  padding: 30rpx 0;
}

.tabNva .avtive {
  border-bottom: 2rpx solid #1173fa;
  color: #1173fa;
}

.content {
  margin: 0 30rpx;
}

.content1 .storeInfo {
  border-top: 1rpx solid #eee;
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 0 0 10rpx 10rpx;
}

.content1 .commodity {
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 30rpx;
}

.content1 .commodity .title {
  text-align: center;
  margin-bottom: 20rpx;
}

.content1 .licence {
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
}
