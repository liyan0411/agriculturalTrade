/* pages/user/marketInfo/marketInfo.wxss */
page {
  background: #eee;
}
.list {
  padding: 30rpx;
}
.list .item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.list .item .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  font-size: 13px;
  color: rgb(51, 51, 51);
}
.list .item .title > view:first-child {
  display: flex;
  /* flex: 1; */
}
.list .item .title .text {
  flex: 1; 
  width: auto;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
} 
.list .item .title .statu {
  color: #30b884;
  border: 1rpx solid #30b884;
  margin-left: 20rpx;
  font-size: 12px;
  padding: 0 10rpx; 
  border-radius: 6rpx;
  height: 18px; 
  line-height: 18px; 
}
.list .item .content {
  display: flex;
  align-items: flex-end;
  padding-top: 20rpx;
  font-size: 12px;
  color: rgb(102, 102, 102);
}
.list .item .content .text {
  flex: 1;
}
.jiantou {
  width: 30rpx;
}
.date {
  font-size: 11px;
  color: rgb(153, 153, 153);
  width: 35px;
  text-align: right;
}
