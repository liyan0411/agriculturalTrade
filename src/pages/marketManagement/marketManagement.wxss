.topBox {
  position: relative;
  width: 100%;
  height: 310rpx;
}

.total {
  font-weight: 600;
  font-size: 36px;
   padding-bottom: 30rpx; 
}

 .topBox::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 230rpx;
  background: #fff;
} 

.topBox .box {
  position: absolute;
  background: url("https://s3.cn-north-1.amazonaws.com.cn/anjiplus-shh/cf56c5427cd091c8321209f8ec134f0e8217992747011937229.png");
  background-size: cover;
  color: #fff;
  width: 750rpx;
  height: 334rpx; 
  left: 50%;
  margin-left: -50%;
  /* top: 40rpx; */
  border-radius: 10rpx;
  /* padding-bottom: 10rpx; */
}

.topBox .box .top {
  position: relative;
  text-align: center;
  padding-top: 48rpx;
  font-size: 13px;
}

