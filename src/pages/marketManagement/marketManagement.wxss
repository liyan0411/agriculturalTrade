/* pages/marketManagement/marketManagement.wxss */
page {
  background: #eee;
}
.topBox {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.total {
  font-weight: 600;
  font-size: 32px;
}
.topBox::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: #fff;
}
.topBox .box {
  position: absolute;
  background: #11b37a;
  color: #fff;
  width: 690rpx;
  left: 50%;
  margin-left: -345rpx;
  top: 40rpx;
  border-radius: 10rpx;
  padding-bottom: 10rpx;
}
.topBox .box .top {
  position: relative;
  text-align: center;
  margin-bottom: 10rpx; 
}
.topBox .box .top::after {
  content: '';
  position: absolute;
  left: 20rpx;
  /* : -80rpx; */
  width: 650rpx;
  height: 1rpx;
  background: #fff;
}
.topBox .bottom {
  display: flex;
  justify-content: center;
} 
.topBox .bottom .row {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 0;
}
.topBox .bottom .row:first-child {
  border-right: 1rpx solid #fff;
}
.active {
  font-size: 16px;
}

/* 应用缴费列表 */
.payTheFees .ul {
  margin: 30rpx;
}
.payTheFees .ul .li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
}

.date {
  color: #666; 
}